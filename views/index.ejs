<!DOCTYPE html>
<html lang="en">
<!-- Head -->
<%- include("./partials/head.ejs") %>

<body>

  <!-- Nav -->
  <%- include("./partials/nav.ejs")  %>

  <div class="blogs content">
    <h2>All Blogs</h2>
    <% blogs.map(blog=>{%>
    <a href="/blogs/<%= blog._id %>" class="single">
      <h3 class="title"><%= blog.title %> </h3>
      <p class="snippet"><%= blog.snippet %> </p>
    </a>
    <% }) %>

  </div>

  <!-- Footer -->
  <%- include("./partials/footer.ejs") %>
</body>

</html>